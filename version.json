{
    "version":  "1.1.2",
    "cloudBuild":  {
                       "setVersionVariables":  true,
                       "buildMetadata":  ""
                   },
    "nugetPackageVersion":  {
                                "semVer":  2,
                                "precision":  "build"
                            },
    "release":  {
                    "tagName":  "v{version}",
                    "versionIncrement":  "minor"
                },
    "publicReleaseRefSpec":  [
                                 "^refs/heads/main$",
                                 "^refs/tags/v\\d+\\.\\d+"
                             ]
}
